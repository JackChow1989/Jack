<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="旅客信息"
            android:textColor="#333"
            android:textSize="32px"
            android:gravity="center"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="86px"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="26px"
        android:background="#ffffffff">

        <ImageView
            android:id="@+id/id_tv_add"
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="276px"
            android:layout_marginTop="26px"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26px"
            android:layout_toRightOf="@id/id_tv_add"
            android:text="新增旅客"
            android:textColor="#1fb6c4"
            android:textSize="32px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wangda"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:layout_below="@id/add"
        android:layout_marginTop="26px"
        android:background="#ffffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22px"
            android:layout_marginTop="16px"
            android:text="王大炮 WANG.DAPAO"
            android:textColor="#333"
            android:textSize="28px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16px"
            android:layout_marginLeft="22px"
            android:text="护照：G50786449"
            android:textColor="#999"
            android:textSize="26px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wanger"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:layout_below="@id/wangda"
        android:layout_marginTop="26px"
        android:background="#ffffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22px"
            android:layout_marginTop="16px"
            android:text="王二炮 WANG.ERPAO"
            android:textColor="#333"
            android:textSize="28px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16px"
            android:layout_marginLeft="22px"
            android:text="护照：G50784449"
            android:textColor="#999"
            android:textSize="26px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:layout_below="@id/wanger"
        android:layout_marginTop="26px"
        android:background="#ffffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22px"
            android:layout_marginTop="16px"
            android:text="张翠山 ZHANG.CUISHAN"
            android:textColor="#333"
            android:textSize="28px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16px"
            android:layout_marginLeft="22px"
            android:text="护照：G507864229"
            android:textColor="#999"
            android:textSize="26px" />
    </RelativeLayout>

</RelativeLayout>
